<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FiwFriends</title>
    <script type="importmap"></script>
    <script src="~/js/cropImage.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FiwFriends.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-contain">

                    <div class="navbar-menu">
                        <a class="" style="font-size: larger;" asp-area="" asp-controller="Home" asp-action="Index">FiwFriends</a>
                    </div>

                   <div class="navbar-menu">
                        @* @if(User.Identity?.IsAuthenticated ?? false){
                            
                        } else {
                            <a class="navbar-item" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                            <a class="navbar-item" asp-area="" asp-controller="Auth" asp-action="Register">Sign up</a>
                        } *@
                    </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            <div id="toast" class="toast-container hide" data-message="@TempData["Message"]">
                <p id="toast-message"></p>
            </div>
            @RenderBody()
        </main>
    </div>

    <div class="cropPopup" id="cropPopup" onclick="closeCropPopup()">
            <div class="cropContainer" id="cropContainer">
                    <p>Adjust and Crop</p>
                    <canvas class="cropCanvas" id="cropCanvas"></canvas>
                    <button onclick="saveCroppedImage()">Save Crop</button>
            </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2568 - FiwFriends
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
