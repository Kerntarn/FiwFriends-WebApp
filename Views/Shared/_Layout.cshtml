<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FiwFriends</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FiwFriends.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-contain">

                    <div class="navbar-menu">
                        <a target='_blank'>
                            <img src='https://i.postimg.cc/PpSScGbM/logo-fiwfriend.png' border='0' alt='logo-fiwfriend' style="width: 70px; height: auto;"/>
                        </a>

                    </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            <div id="toast" class="toast-container hide" data-message="@TempData["Message"]">
                <p id="toast-message"></p>
            </div>
            @RenderBody()
        </main>
    </div>

    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2568 - FiwFriends
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
