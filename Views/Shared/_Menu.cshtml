
@inject Microsoft.AspNetCore.Identity.UserManager<FiwFriends.Models.User> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}


<div class="menu">
        <img src="https://ultrasabers.com/wp-content/uploads/2018/05/DarthVader.jpg" style="max-width: 10rem;" class="profile-img">
        <h2>@user?.UserName</h2>

        <p>@user?.FirstName @user?.LastName</p>
        <br>
        <a class="menu-edit_profile" asp-controller="Post" asp-action="Index"><button type="submit" class="edit-btn">Edit profile</button></a>

        <a class="menu-home" asp-controller="Post" asp-action="Index"><b>Home</b></a>
        <a class="menu-status" asp-controller="Home" asp-action="Status"><b>Status</b></a>
        <a class="menu-like" asp-controller="Post" asp-action="GetFavoritedPost"><b>Likes</b></a>
        <a class="menu-my_post" asp-controller="User" asp-action="MyPost"><b>My post</b></a>
        <br>
        <form method="post" asp-controller="Auth" asp-action="Logout">
                <button type="submit" class="logout-btn">Logout</button>
        </form>
</div>
