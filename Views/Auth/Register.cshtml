@model FiwFriends.DTOs.Auth.RegisterDto

@{
    ViewData["Title"] = "Sign-up Page";
}

@section Styles {
        <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
}

@section Scripts {
  <script src="~/js/auth/register/profile_image.js"></script>
  <script src="~/js/auth/register/register_form_animate.js"></script>
}

@if (TempData["error"] != null)
{
  <div class="error-text">
    @TempData["error"]
  </div>
}

<div class="main main-login-property">
        
        <div class="card">
            
            <div class="login-body algn-center">
                    <h2>Create Account</h2>

                    <form asp-action="Register" id="form" class="field">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="login-body blue mh-40 ">

                            <div class="mh-40">
                                <p class="algn-start login-p" >First name</p>
                                <span asp-validation-for="FirstName" class="error-text"></span>
                                <input class="inp" type="text" asp-for="FirstName" >
                                
                            </div>

                            <div class="mh-40">
                                <p class="algn-start login-p" >Last name</p>
                                <span asp-validation-for="LastName" class="error-text"></span>
                                <input class="inp" type="text" asp-for="LastName" >
                            </div>
                            
                            <div class="mh-40">
                                <p class="algn-start login-p" >username</p>
                                <input class="inp" type="text" id="register-username">
                            </div>
                            
                            <div class="mh-40">
                                <p class="algn-start login-p">password</p>
                                <input class="inp" type="password" id="register-pswd">
                            </div>

                            <div class="mh-40">
                                <p class="algn-start login-p">confirm password</p>
                                <input class="inp" type="password" id="confirm-register-pswd">
                            </div>

                            
                            <p id="register-text"></p>

                            <button class="navbar-item btn-login-property" onclick=signup()>sign up</button>
                            <p>Already have an account? <a asp-controller="Home" asp-action="Login">login</a></p>
                        
                        </div>
                    </form>
            </div>
        </div>

</div>