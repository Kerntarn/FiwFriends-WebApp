@using FiwFriends.DTOs.Auth

@{
    ViewData["Title"] = "Sign-up Page";
}

@section Styles {
        <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
}

@section Scripts {
  <script src="~/js/auth/register/profile_image.js"></script>
  <script src="~/js/auth/register/register_form_animate.js"></script>
}

@if (TempData["error"] != null)
{
  <div class="error-text">
    @TempData["error"]
  </div>
}

<div class="main main-login-property">
        
        <div class="card">
            
            <div class="login-body algn-center">
                    <h2>Create Account</h2>

                    <form asp-action="Register" id="form" class="field">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class=" login-body blue mh-40 ">

                            <div class="mh-40">
                                <p class="algn-start login-p" ><b>name</b></p>
                                <input class="inp" type="text" id="register-name">
                            </div>
                            
                            <div class="mh-40">
                                <p class="algn-start login-p" ><b>username</b></p>
                                <input class="inp" type="text" id="register-username">
                            </div>
                            
                            <div class="mh-40">
                                <p class="algn-start login-p"><b>password</b></p>
                                <input class="inp" type="password" id="register-pswd">
                            </div>

                            <div class="mh-40">
                                <p class="algn-start login-p"><b>confirm password</b></p>
                                <input class="inp" type="password" id="confirm-register-pswd">
                            </div>

                            
                            <p id="register-text"></p>

                            <button class="navbar-item btn-login-property" onclick=signup()><b>sign up</b></button>
                            <p>Already have an account? <a asp-controller="Auth" asp-action="Login" class="login-link"><u>login</u> </a></p>
                        
                        </div>
                    </form>
            </div>
        </div>

</div>