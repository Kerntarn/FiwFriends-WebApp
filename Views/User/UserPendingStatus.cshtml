@model IEnumerable<FiwFriends.Models.UserPendingStatusViewModel>

@{  //Razor view of home's index
    ViewData["Title"] = "Status Page";
}

@section Styles {
        <link rel="stylesheet" href="~/css/status.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/post/post.css" asp-append-version="true" />
}

@if (TempData["Message"] != null)
{
    <script>
        alert("@TempData["Message"]");
    </script>
}

<div class="main">

        <div class="home-container">

            @await Html.PartialAsync("_Menu")

            <div class="home-body">

                <div class="card">
                        <div class="status-container">
                                <a asp-controller="User" asp-action="UserInboxStatus">INBOX</a> 
                                <a asp-controller="User" asp-action="UserPendingStatus">PENDING</a>
                        </div>
                        <table>
                                <tr>
                                        <th>Post name</th>
                                        <th>User</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                </tr>

                                @foreach (var info in Model)
                                {
                                        <tr class="border-bottom">
                                                <td>@info.Activity</td>
                                                <td>@info.Username</td>
                                                <td>Mon,13 Jan 2025</td>
                                                <td><b class="accepted-status" >@info.Status</b></td>
                                        </tr>

                                        foreach (var question in info.QnAs)
                                        {
                                                <tr class="border-bottom">
                                                        <td>
                                                                <div class="answer_detail">@question.Answer</div>
                                                        </td>
                                                        <td></td>
                                                        <td></td>
                                                </tr>
                                        }
                                        <td>
                                                <div class="button-container ml-0">
                                                        <form asp-action="Reject" asp-controller="Form" asp-route-formid="@info.FormId" method="post">
                                                        <button type="submit" class="btn_reject">reject</button>
                                                        </form>
                                                        <form asp-action="Approve" asp-controller="Form" asp-route-postid="@info.PostId" asp-route-userid="@info.UserId" method="post">
                                                                <button type="submit" class="btn_accept">accept</button>
                                                        </form>
                                                </div>
                                                
                                        </td>
                                }

                        </table>
                    </div>

            </div>

        </div>

</div>