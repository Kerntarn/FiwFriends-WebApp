@model IEnumerable<FiwFriends.Models.UserPostStatusViewModel>

@{  //Razor view of home's index
    ViewData["Title"] = "Status Page";
}

@section Styles {
        <link rel="stylesheet" href="~/css/status.css" asp-append-version="true" />
}

<div class="main">

        <div class="home-container">

            @await Html.PartialAsync("_Menu")

            <div class="home-body">

                <div class="card">
                        <div class="status-container">
                                <a asp-controller="User" asp-action="UserInboxStatus">INBOX</a> 
                                <a asp-controller="User" asp-action="UserPendingStatus">PENDING</a>
                        </div>
                        <table>
                                <tr>
                                        <th>Post name</th>
                                        <th>User</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                </tr>

                                @foreach (var post in Model)
                                {
                                        <tr class="border-bottom">
                                                <td>@post.Activity</td>
                                                <td>@post.Owner</td>
                                                <td>@post.AppointmentTime.DayOfWeek, @post.AppointmentTime.DateTime</td>
                                                <td><b class="accepted-status" >@post.Status</b></td>
                                        </tr>
                                }
                                
                        </table>
                    </div>

            </div>

        </div>

</div>