@model FiwFriends.DTOs.PostDTO

@{  //Razor view of home's index
    ViewData["Title"] = "Create Page";
}

@section Styles {
        <link rel="stylesheet" href="~/css/post/post.css" asp-append-version="true" />
}

<div class="main">

        <div class="home-container">

            @await Html.PartialAsync("_Menu")

            <div class="home-body">

                <div class="card">
                        <div class="card-body">
                            <form asp-action="Create" method="post">
                                <div class="mh-40">
                                    <p class="algn-start login-p">Post name</p>
                                    <span asp-validation-for="Activity" class="error-text"></span>
                                    <input class="inp" type="text"  asp-for="Activity" >
                                </div>

                                <div class="mh-40">
                                    <p class="algn-start login-p">Post detail</p>
                                    <span asp-validation-for="Description" class="error-text"></span>
                                    <input class="inp" type="text"  asp-for="Description" >
                                </div>

                                

                                

                                <div class="mh-40">
                                    <p class="algn-start login-p">Location</p>
                                    <span asp-validation-for="Location" class="error-text"></span>
                                    <input class="inp" type="text"  asp-for="Location" >
                                </div>

                                <div class="mh-40">
                                    <p class="algn-start login-p">Tag</p>
                                    <span asp-validation-for="Tags" class="error-text"></span>

                                        <div class="tag-container">
                                            <button type="button" class="tag-select" data-tag="Food" >Food</button>
                                            <button type="button" class="tag-select" data-tag="Relaxing">Relaxing</button>
                                            <button type="button" class="tag-select" data-tag="Tag3" >Tag3</button>
                                            <button type="button" class="tag-select" data-tag="Tag4" >Tag4</button>
                                        </div>

                                    <input type="hidden" id="tagInput" />
                                </div>

                                <div class="mh-40">
                                    <p class="algn-start login-p">How many people can join?</p>
                                    <span asp-validation-for="Limit" class="error-text"></span>
                                    <input class="inp w-auto" type="number"  asp-for="Limit" >
                                </div>

                                <div class="time-container">
                                    <div>
                                        <p class="algn-start login-p">AppointmentTime</p>
                                        <span asp-validation-for="AppointmentTime" class="error-text"></span>
                                        <input class="inp" type="datetime-local"  asp-for="AppointmentTime" >
                                    </div>
                                    
                                    <div>
                                        <p class="algn-start login-p">Due date</p>
                                        <span asp-validation-for="ExpiredTime" class="error-text"></span>
                                        <input class="inp" type="datetime-local"  asp-for="ExpiredTime" >
                                    </div>
                                    
                                </div>

                                <div class="mh-40">
                                    <p class="algn-start login-p">Question</p>
                                    <span asp-validation-for="Questions" class="error-text"></span>
                                    <div id="question-wrapper">
                                        <div class="question-container">
                                            <input class="question-input" type="text" name="Questions[0].Content">
                                            <button class="question-more" type="button" onclick="addQuestion(this)">+</button>
                                        </div>
                                    </div>
                                </div>

                                <div class="button-container">
                                    <button class="button white" asp-action="">back</button>
                                    <button class="button" type="submit">Comfirm</button>
                                </div>

                                
                            </form>
                                
                        </div>
                    </div>

            </div>

        </div>

</div>